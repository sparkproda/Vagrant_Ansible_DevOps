{
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:16.04",
            "commit": "true",
            "pull": "true",
            "changes": [
                "ENTRYPOINT [\"nginx -g 'daemon off;'\"]"
            ]
        }   
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "packer/install-ansible.sh"
        },
        {
            "type": "ansible-local",
            "playbook_file": "packer/common.yml"
        }
    ],
    "post-processors": [
        [
          {
            "type": "docker-tag",
            "repository": "my-nginx",
            "tag": "0.1"
          }
        ]
    ]
 }